{
  "name": "pixelverse-space-explorer",
  "version": "1.0.0",
  "description": "Retro 16-bit isometric space exploration game with procedural galaxy generation",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "node --watch server/index.js",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server/index.js",
    "generate:sprites": "node scripts/generateAllSprites.mjs",
    "generate:manifest": "node tools/generateManifest.mjs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.83",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "vite": "^7.2.2"
  }
}
